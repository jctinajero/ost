{% extends 'setup/layout.html.twig' %}

{% block content %}
    <div id="main">
        <h1>{% trans %}Basic Installation Completed{% endtrans %}</h1>
        <p>{% trans %}osTicket installation has been completed successfully.{% endtrans %}</p>

        <h3 style="color:#FF7700;">{% trans %}Stay up to date{% endtrans %}: </h3>
        {% trans %}It's important to keep your osTicket installation up to date. Get announcements, security updates and alerts delivered directly to you!{% endtrans %}

        <br><br>
        <form action="install.php" method="post">
            <input type="hidden" name="s" value="subscribe">
            <div class="row">
                <label>{% trans %}Full Name{% endtrans %}:</label>
                <input type="text" name="name" size="30" value="{% if info.name is defined %}{{ info.name }}{% endif %}">
                {% if errors.name is defined %}<font class="error">{{ errors.name }}</font>{% endif %}
            </div>

            <div class="row">
                <label>{% trans %}Email Address{% endtrans %}:</label>
                <input type="text" name="email" size="30" value="{% if info.email is defined %}{{ info.email }}{% endif %}">
                {% if errors.email is defined %}<font class="error">{{ errors.email }}</font>{% endif %}
            </div>
            <br>

            <div class="row">
                <strong>
                    {% trans %}I'd like to receive the following notifications{% endtrans %}:
                    {% if errors.notify is defined %}<font class="error">{{ errors.notify }}</font>{% endif %}
                </strong>

                <label style="width:500px">
                    <input style="position:relative; top:4px; margin-right:10px" type="checkbox" name="news" value="1" {% if info.news is defined %}checked="checked"{% endif %}>
                    {% trans %}News &amp; Announcements{% endtrans %}
                </label>
                <label style="width:500px">
                    <input style="position:relative; top:4px; margin-right:10px" type="checkbox" name="alerts" value="1" {% if info.alerts is defined %}checked="checked"{% endif %}>
                    {% trans %}Security Alerts{% endtrans %}
                </label>
            </div>

            <div id="bar">
                <input class="btn" type="submit" value="{% trans %}Keep me Updated{% endtrans %}">
                <a class="unstyled" href="install.php?s=ns">{% trans %}No thanks.{% endtrans %}</a>
            </div>
        </form>
    </div>

    <div id="sidebar">
        <h3>{% trans %}Thank you!{% endtrans %}</h3>
        <p>
            {% trans %}Once again, thank you for choosing osTicket as your new customer support platform! {% endtrans %}
        </p>
        <p>
            {% trans %}Launching a new customer support platform can be a daunting task. Let us get you started! We provide professional support services to help get osTicket up and running smoothly for your organization.{% endtrans %}
            <a target="_blank" href="http://osticket.com/support/professional_services.php">{% trans %}Learn More!{% endtrans %}</a>
        </p>
    </div>
{% endblock %}
